{
  "$schema": "https://mintlify.com/docs.json",
  "name": "VIBESFLOW Documentation",
  "theme": "mint",
  "colors": {
    "primary": "#00ff41",
    "light": "#ff00a0",
    "dark": "#0cf"
  },
  "fonts": {
    "family": "JetBrains Mono",
    "weight": 400
  },
  "topbarLinks": [
    {
      "name": "Start Vibing",
      "url": "https://vibesflow.app"
    }
  ],
